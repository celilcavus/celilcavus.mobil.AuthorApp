<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reclerViewBook_Detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"

    >

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Adı : "
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/txtKitapAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="isim"
            android:textSize="22dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Puan : "
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/txtKitapPuani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sayfa Sayısı : "
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/txtKitapSayfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yazar Adı : "
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/txtKitapYazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yazar Adı"
            android:textSize="22dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Türü : "
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/txtKitapTuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Türü"
            android:textSize="22dp"
            />
    </LinearLayout>
</LinearLayout>
